<%= content_for :head do %>
  <script>
    $(document).ready(function() {
      $('.post').tooltip();
    });
  </script>
<% end %>

<p>
  <b>Feed Title:</b>
  <%= @feed.title %>
</p>

<p>Hover over links for a preview.</p>

<div id="posts">
  <% @feed.posts.each do |post| %>

  <div>
    <span class='post' data-toggle="tooltip" data-placement="top" title="<%= post.preview %>">
      <%= link_to raw(post.title), "/feeds/#{post.feed_id}/posts/#{post.id}", :remote=>true, :data => {:toggle=>"modal", :target=>"#modal"} %>
      <span class="author"> by <%= post.author %></span>
    </span>
  </div>

  <% end %>
</div>


<%= link_to 'Edit', edit_feed_path(@feed) %> |
<%= link_to 'Back', feeds_path %>


<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div id="modal-header" class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Modal header</h3>
  </div>
  <div id="modal-body" class="modal-body">
    <p>Static content...</p>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>