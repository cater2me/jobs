<h3>Articles</h3>

<% @posts.each do |post| %>

  <div class='entry' >
    <span class='title' data-toggle="tooltip" data-placement="top" title="<%= post[:preview] %>"><%= link_to raw(post[:title]), '/posts/' + Base64.encode64(post[:feed_url]) + '/' + Base64.encode64(raw(post[:title])), :data => {:toggle=>"modal", :target=>"#modal"}, :remote => true, :class => "title" %> <span>by <%= post[:author] %></span></span>
  </div>

<% end %>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div id="modal-header" class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Modal header</h3>
  </div>
  <div id="modal-body" class="modal-body">
    <p>Static content...</p>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>